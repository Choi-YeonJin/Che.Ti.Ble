<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SettingActivity">


    <Button
        android:id="@+id/btnNIckNameChange"
        android:layout_width="match_parent"
        android:layout_height="80dp"

        android:background="@drawable/scarebuttonshape"
        android:drawableLeft="@drawable/namechange"
        android:drawableRight="@drawable/rightarrow"

        android:drawablePadding="20dip"
        android:gravity="left|center_vertical"

        android:paddingLeft="20dip"
        android:paddingRight="20dip"


        android:text="name change"
        android:textColor="#000000"
        android:textSize="30sp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.005" />

    <Button
        android:id="@+id/btnDarkmode"
        android:layout_width="match_parent"
        android:layout_height="80dp"

        android:background="@drawable/scarebuttonshape"
        android:drawableLeft="@drawable/darkmode"

        android:drawableRight="@drawable/rightarrow"
        android:drawablePadding="20dip"

        android:gravity="left|center_vertical"
        android:paddingLeft="20dip"


        android:paddingRight="20dip"
        android:text="Dark mode"
        android:textColor="#000000"

        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnNIckNameChange"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>